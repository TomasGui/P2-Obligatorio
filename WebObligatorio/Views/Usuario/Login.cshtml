@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!--Bootsrap 4 CDN-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <!--Fontawesome CDN-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    <!--Custom styles-->
    <link rel="stylesheet" type="text/css" href="styles.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <title>Login - Acceso</title>
</head>
<body > 
    <div class="m-5 container col-auto">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h2>Iniciar sesion</h2>
                </div>
                @if (@ViewBag.MensajeError != null)
                 {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.MensajeError
                    </div>
                 }
                @if (@ViewBag.MensajeExito != null)
                 {
                    <div class="alert alert-success" role="alert">
                        @ViewBag.MensajeExito
                    </div>
                 }
                <div class="card-body">
                    <form action="/usuario/login" method="post">
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input type="text" class="form-control" name="usuario" id="nombreUsuario" placeholder="Nombre usuario" required>
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="password" name="password" id="password" class="form-control" placeholder="Password" required>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Login" class="btn btn-primary float-right">
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center links">
                        <p> No tiene cuenta?  <a class="d-inline" href="/usuario/create">  Registrarse </a> </p>
                    </div>
                    <div class="col-auto text-center">
                        <a class="btn btn-primary btn-sm " role="button" asp-controller="Usuario" asp-action="AnonimoIndex">Volver a inicio</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
