@using Dominio
@model Usuario

<div class="m-5 container col-auto">
    <div class="d-flex justify-content-center h-100">
        <div class="card">
            <div class="card-header">
                <h2>Registro de clientes</h2>

            </div>
            @if (@ViewBag.Mensaje != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Mensaje
                </div>
            }

    <div class="card-body">
        <form action="/usuario/create" method="post">

            <div class="input-group form-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Nombre</span>
                </div>
                <input type="text" class="form-control" name="nombre" id="nombre" value="@Model.Nombre" placeholder="Nombre" required>
            </div>
            <div class="input-group form-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Apellido</span>
                </div>
                <input type="text" class="form-control" name="apellido" id="apellido" value="@Model.Apellido" placeholder="Apellido" required>
            </div>
            <div class="input-group form-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Nacimiento</span>
                </div>
                <input type="date" class="form-control" name="fechaNac" id="fechaNac" value="@Model.FechaNac" placeholder="DD / MM / AAAA" required>
            </div>
            <div class="input-group form-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Email</span>
                </div>
                <input type="email" class="form-control" name="email" id="email" value="@Model.Email" placeholder="ejemplo@mail.com" required>
            </div>
            <div class="input-group form-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Nombre Usuario</span>
                </div>
                <input type="text" class="form-control" name="nombreUsuario" id="nombreUsuario" value="@Model.NombreUsuario" placeholder="Nombre usuario" required>
            </div>
            <div class="input-group form-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Password</span>
                </div>
                <input type="password" name="password" id="password" class="form-control" value="@Model.Password" placeholder="Password" required>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrarse" class="btn btn-primary float-right">
            </div>
        </form>
    </div>
</div>
    </div>
</div>